<div class="tab scrollable{{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}">
    <div class="form-group">
        <label for="maxReachShown">{{localize "gurps-gridless.settings.maxReachShown.name"}}</label>
        <input type="number" name="flags.gurps-gridless.maxReachShown" min="0.0" max="15.0" step="1.0" value="{{source.flags.gurps-gridless.maxReachShown}}" 
           placeholder="{{localize "gurps-gridless.tokenSettings.maxReachShown.placeholder"}}">
    </div>
    <fieldset>
        <legend>{{localize "gurps-gridless.tokenSettings.tokenDimensions.legend"}}</legend>
        <div class="form-group">
            <label for="tokenWidth">{{localize "gurps-gridless.tokenSettings.tokenWidth.name"}}</label>
            <input type="number" name="flags.gurps-gridless.tokenWidth" min="0.2" max="30.0" step="0.1" value="{{#if source.flags.gurps-gridless.tokenWidth}}{{source.flags.gurps-gridless.tokenWidth}}{{else}}1{{/if}}" placeholder="">
            <p class="hint">{{localize "gurps-gridless.tokenSettings.tokenWidth.note"}}</p>
        </div>
        <div class="form-group">
            <label for="tokenLength">{{localize "gurps-gridless.tokenSettings.tokenLength.name"}}</label>
            <input type="number" name="flags.gurps-gridless.tokenLength" min="0.2" max="30.0" step="0.1" value="{{#if source.flags.gurps-gridless.tokenLength}}{{source.flags.gurps-gridless.tokenLength}}{{else}}1{{/if}}" placeholder="">
            <p class="hint">{{localize "gurps-gridless.tokenSettings.tokenLength.note"}}</p>
        </div>
         <div class="form-group">
            <label for="tokenOffsetY">{{localize "gurps-gridless.tokenSettings.rotationOffsetY.name"}}</label>
            <input type="number" name="flags.gurps-gridless.tokenOffsetY" min="-30.0" max="30.0" step="0.1" value="{{source.flags.gurps-gridless.tokenOffsetY}}" placeholder="">
            <p class="hint">{{localize "gurps-gridless.tokenSettings.rotationOffsetY.note"}}</p>
        </div>
        <div class="form-group">
            <label for="tokenOffsetX">{{localize "gurps-gridless.tokenSettings.rotationOffsetX.name"}}</label>
            <input type="number" name="flags.gurps-gridless.tokenOffsetX" min="-30.0" max="30.0" step="0.1" value="{{source.flags.gurps-gridless.tokenOffsetX}}" placeholder="">
            <p class="hint">{{localize "gurps-gridless.tokenSettings.rotationOffsetX.note"}}</p>
        </div>
    </fieldset>
    <fieldset>
        <legend>{{localize "gurps-gridless.tokenSettings.image.legend"}}</legend>
       <div class="form-group">
            <label for="tokenScaling">{{localize "gurps-gridless.tokenSettings.tokenScaling.name"}}</label>
            <div class="form-fields">
                <range-picker name="flags.gurps-gridless.tokenScaling" value="{{#if source.flags.gurps-gridless.tokenScaling}}{{source.flags.gurps-gridless.tokenScaling}}{{else}}1{{/if}}" min="0.1" max="3.0" step="0.1">
                    <input type="range" min="0.1" max="3" step="0.1">
                    <input type="number" min="0.1" max="3" step="0.1">
                </range-picker>
            </div>        
        </div>
        <div class="form-group">
            <label for="tokenImageOffsetY">{{localize "gurps-gridless.tokenSettings.imageOffsetY.name"}}</label>
            <input type="number" name="flags.gurps-gridless.tokenImageOffsetY" min="-30.0" max="30.0" step="0.1" value="{{source.flags.gurps-gridless.tokenImageOffsetY}}" placeholder="">
            <p class="hint">{{localize "gurps-gridless.tokenSettings.imageOffsetY.note"}}</p>
        </div>
        <div class="form-group">
            <label for="tokenImageOffsetX">{{localize "gurps-gridless.tokenSettings.imageOffsetX.name"}}</label>
            <input type="number" name="flags.gurps-gridless.tokenImageOffsetX" min="-30.0" max="30.0" step="0.1" value="{{source.flags.gurps-gridless.tokenImageOffsetX}}" placeholder="">
            <p class="hint">{{localize "gurps-gridless.tokenSettings.imageOffsetX.note"}}</p>
        </div>
    </fieldset>
    <fieldset>
        <legend>{{localize "gurps-gridless.tokenSettings.facingIndicator.legend"}}</legend>
        <div class="form-group">
            <label for="facingIndicatorEnabled">{{localize "gurps-gridless.tokenSettings.facingIndicatorEnabled.name"}}</label>
            <input type="checkbox" name="flags.gurps-gridless.facingIndicatorEnabled" min="-30.0" max="30.0" step="0.1" {{checked source.flags.gurps-gridless.facingIndicatorEnabled}}>
            <p class="hint">{{localize "gurps-gridless.tokenSettings.facingIndicatorEnabled.note"}}</p>
        </div>
        <div class="form-group">
            <label for="facingIndicatorScale">{{localize "gurps-gridless.tokenSettings.facingIndicatorScale.name"}}</label>
            <div class="form-fields">
                <range-picker name="flags.gurps-gridless.facingIndicatorScale" value="{{#if source.flags.gurps-gridless.facingIndicatorScale}}{{source.flags.gurps-gridless.facingIndicatorScale}}{{else}}1{{/if}}" min="0.1" max="3.0" step="0.1">
                    <input type="range" min="0.1" max="3" step="0.1">
                    <input type="number" min="0.1" max="3" step="0.1">
                </range-picker>
            </div>
            <p class="hint">{{localize "gurps-gridless.tokenSettings.facingIndicatorScale.note"}}</p>        
        </div>
        <div class="form-group">
            <label for="facingIndicatorImage">{{localize "gurps-gridless.tokenSettings.facingIndicatorImage.name"}}</label>
            <div class="form-fields">
                <file-picker name="flags.gurps-gridless.facingIndicatorImage" type="any"  value="{{source.flags.gurps-gridless.facingIndicatorImage}}">
                    <input type="text">
                <button class="fa-solid fa-file-import fa-fw icon" type="button" data-tooltip="FILES.BrowseTooltip" aria-label="FILES.BrowseTooltip" tabindex="-1"></button>
                </file-picker>
            </div>
            <p class="hint">{{localize "gurps-gridless.tokenSettings.facingIndicatorImage.note"}}</p>        
        </div>
    </fieldset>
</div>

